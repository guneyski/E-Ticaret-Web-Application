@model CategoryListModel
@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid gradiant text-white font-weight-bold">
    <div class="row gradiant">
        <div class="col-lg-4 mt-5">
            <div class="row mt-5">
                <div style="color:darkorange" class="col-12 text-center"><h1><strong>Admin Kategori Ekleme</strong></h1></div>
            </div>
            <hr style="background-color:white" />
            <form asp-controller="Admin" asp-action="CreateCategory" method="post">
                <div class="form-group row">
                    <label asp-for="Name" class="col-lg-3 col-form-label">Kategori Adı:</label>
                    <div class="col-lg-9">
                        <input asp-for="Name" value="" class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-lg-3"></div>
                    <div class="col-lg-9">
                        <button type="submit" class="btn btn-primary btn-block">Kategori Kaydet</button>
                    </div>
                </div>
            </form>
        </div>

        <div class="col-lg-8 mt-5">
            <div class="row mt-5">
                <div style="color:darkorange" class="col-12 text-center"><h1><strong>Admin Kategorileri</strong></h1></div>
            </div>
            <hr style="background-color:white" />
            @if (Model.Categories.Count > 0)
            {
                <table class="table table-bordered text-white">
                    <thead>
                        <tr>
                            <td>DB Id</td>
                            <td>AD</td>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Categories)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>
                                    <a class="btn btn-primary btn-md btn-block" href="/admin/editcategory/@item.Id">Güncelle</a>
                                    <form action="/admin/deletecategory" method="post">
                                        <input type="hidden" name="categoryId" value="@item.Id" />
                                        <button type="submit" class="btn btn-danger btn-md btn-block mt-2">Sil</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-warning">
                    <h4>Kategori Yok</h4>
                </div>
            }
        </div>
    </div>
</div>