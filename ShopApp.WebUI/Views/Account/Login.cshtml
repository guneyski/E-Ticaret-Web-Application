@model LoginModel
@{
    ViewData["Title"] = "Login";
}

@section Scripts
{
    <script src="/modules/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}
<div class="row text-white">
    <div class="col-lg-3"></div>
    <div class="col-lg-6 mt-5">
        <h1 style="color:darkorange" class="mt-5">Kullanıcı Girişi</h1>
        <h5 class="mt-1" style="color:white; text-align:right;">Üye değil misiniz?<a style="color:antiquewhite" asp-controller="Account" asp-action="Register" class="nav-link active"><i class="fas fa-user-plus fa-lg"></i> Üye Ol</a></h5>
        <hr class="hr-signup"/>
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="text-white">@ViewBag.ErrorMessage</div>
        }
        <form asp-controller="Account" asp-action="Login" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl" />

            <div class="form-group row">
                <div class="col-lg-2"></div>
                <div class="col-lg-8">
                    <label asp-for="Email"><b>Email Adresiniz</b></label>
                    <input asp-for="Email" value="@Model.Email" class="input-text-signup" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="col-lg-2"></div>
            </div>
            <div class="form-group row">
                <div class="col-lg-2"></div>
                <div class="col-lg-8">
                    <label asp-for="Password"><b>Parola</b></label>
                    <input asp-for="Password" value="@Model.Password" class="input-text-signup" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="col-lg-2"></div>
            </div>
            <div class="form-group row">
                <div class="col-lg-2"></div>
                <div class="col-lg-4 mt-1">
                    <button type="submit" class="btn btn-primary btn-block"><b>Giriş Yap</b></button>
                </div>
                <div class="col-lg-4 mt-1">
                    <a href="/account/forgotpassword" class="btn btn-warning btn-block"><b>Parolamı Unuttum</b></a>
                </div>
                <div class="col-lg-2"></div>
            </div>
        </form>
    </div>
    <div class="col-lg-3"></div>
</div>






