@{
    ViewData["Title"] = "ForgotPassword";
}
<div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6 mt-5 text-white">
        <h1 style="color:darkorange" class="mt-5">Parolamı Unuttum</h1>
        <hr class="hr-signup"/>
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="text-danger">@ViewBag.ErrorMessage</div>
        }
        <form asp-controller="Account" asp-action="ForgotPassword" method="post">
            <div class="form-group row">
                <div class="col-lg-2"></div>
                <div class="col-lg-8">
                    <label><b>Email Adresiniz</b></label>
                    <input type="text" name="Email" class="input-text-signup" />
                </div>
                <div class="col-lg-2"></div>
            </div>
            <div class="form-group row">
                <div class="col-lg-3"></div>
                <div class="col-lg-6">
                    <button type="submit" class="btn btn-primary btn-block"><b>Sıfırla</b></button>
                </div>
                <div class="col-lg-3"></div>
            </div>
        </form>
    </div>
    <div class="col-lg-3"></div>
</div>

